---
import Base from '../../layouts/BaseLayout.astro';
export async function getStaticPaths() {
  return [
    { params: { altura: '175', peso: '70' } },
    { params: { altura: '160', peso: '50' } },
  ];
}
const { altura, peso } = Astro.params;
const h = Number(altura)/100;
const p = Number(peso);
const imc = p/(h*h);
function cat(v){ if(v<18.5) return 'Abaixo do peso'; if(v<25) return 'Peso normal'; if(v<30) return 'Sobrepeso'; return 'Obesidade'; }
const title = `IMC para ${peso}kg e ${altura}cm`;
---
<Base {title} description={`Resultado de IMC para ${peso} kg e ${altura} cm.`}>
  <link rel="stylesheet" href="/src/styles/global.css">
  <h1 class="text-2xl font-semibold mb-2">{title}</h1>
  <p class="text-lg">IMC: <strong>{imc.toFixed(1)}</strong> â€” {cat(imc)}</p>
  <p class="mt-4"><a href="/calculadora-de-imc/">Calcular outros valores</a></p>
</Base>
